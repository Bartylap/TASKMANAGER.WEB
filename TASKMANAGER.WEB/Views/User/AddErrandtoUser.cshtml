@model TaskManager.Application.ViewModels.Errand.ErrandListForAddToUserVm

@{
 
    ViewData["Title"] = "AddErrandtoUser";
}
    <center><h1>Wybierz zadanie</h1></center>

    <form asp-action="AddErrandtoUser">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nazwa
                    </th>
                    <th>
                        Opis
                    </th>
                    <th>
                        <center>Zaznacz</center>
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Errands.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Errands[i].Name, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Errands[i].Description, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                        <td>
                            <center> <input class="form-check-input" asp-for="Errands[i].IsChecked" /></center>
                        </td>

                    </tr>
                    @Html.HiddenFor(modelItem => Model.Errands[i].Id, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(modelItem => Model.ErrandId)
                    @Html.HiddenFor(modelItem => Model.MyUserId)
                }




            </tbody>
        </table>
        <div class="form-group">
            <input type="submit" value="Zapisz" class="btn btn-primary" id="save" />
        </div>                   
    </form>

