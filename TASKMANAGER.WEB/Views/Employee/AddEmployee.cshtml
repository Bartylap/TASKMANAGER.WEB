@model TaskManager.Application.ViewModels.Employee.AddEmployeeVm


@{
    ViewData["Title"] = "AddEmployee";
}

<h1>Dodaj Pracownika</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">*@
            @*<label asp-for="Id" class="control-label"></label>*@
            <input type="hidden" asp-for="Id" class="form-control" />
            @*<span asp-validation-for="Id" class="text-danger"></span>
        </div>*@
        <div class="Personal">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Imię</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nazwisko</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pesel" class="control-label"></label>
                <input asp-for="Pesel" class="form-control" />
                <span asp-validation-for="Pesel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">Stanowisko</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Data Urodzenia</label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
        </div>
            <div class="Address">
            <div class="form-group">
                <label asp-for="EmployeeAddress[0].AdressLine1" class="control-label">Ulica</label>
                <input asp-for="EmployeeAddress[0].AdressLine1" class="form-control" />
                <span asp-validation-for="EmployeeAddress[0].AdressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeAddress[0].BuildingNumber" class="control-label">Numer mieszknia</label>
                <input asp-for="EmployeeAddress[0].BuildingNumber" class="form-control" />
                <span asp-validation-for="EmployeeAddress[0].BuildingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeAddress[0].City" class="control-label">Miasto</label>
                <input asp-for="EmployeeAddress[0].City" class="form-control" />
                <span asp-validation-for="EmployeeAddress[0].City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeAddress[0].Country" class="control-label">Kraj</label>
                <input asp-for="EmployeeAddress[0].Country" class="form-control" />
                <span asp-validation-for="EmployeeAddress[0].Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeAddress[0].ZipCode" class="control-label">Kod pocztowy</label>
                <input asp-for="EmployeeAddress[0].ZipCode" class="form-control" />
                <span asp-validation-for="EmployeeAddress[0].ZipCode" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeContact[0].Email" class="control-label">Adres Email</label>
                <input asp-for="EmployeeContact[0].Email" class="form-control" />
                <span asp-validation-for="EmployeeContact[0].Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeContact[0].PhoneNumber" class="control-label">Numer telefonu</label>
                <input asp-for="EmployeeContact[0].PhoneNumber" class="form-control" />
                <span asp-validation-for="EmployeeContact[0].PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gotowe" class="btn btn-success" />
                <a class="btn btn-danger" style="height:38px" ,"width: 100px;" asp-action="Index" asp-controller="Employee">Anuluj </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
