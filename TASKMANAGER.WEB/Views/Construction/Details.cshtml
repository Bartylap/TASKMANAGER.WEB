@model TaskManager.Application.ViewModels.Construction.DetailsConstructionVm

@{
    ViewData["Title"] = "Details";
}


<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Details" class="wraper">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="detailsconstruction_construction">
                <input type="hidden" asp-for="Id" class="form-control" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nazwa</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Week" class="control-label">Tydzień</label>
                    <input asp-for="Week" class="form-control" />
                    <span asp-validation-for="Week" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label">Data</label>
                    <input type="date" asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AddressLine1" class="control-label">Adres</label>
                    <input asp-for="AddressLine1" class="form-control" />
                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label">Miasto</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label">Państwo</label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode" class="control-label">Kod Pocztowy</label>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="detailsconstruction_employee" >
                <div style=" height: 300px; width: 500px; overflow: auto;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Imię
                                </th>
                                <th>
                                    Nazwisko
                                </th>
                                <th>
                                    <a class="const_add_emp" href="@Url.Action("AddEmployeeToConstruction", "Construction",new { id = Model.Id }) "> <img src="~/css/list-add.png"></a>
                                    @*<a class="const_add_emp" asp-action="AddEmployeeToConstruction" asp-controller="Construction"> <img src="~/css/list-add.png"></a>*@
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Employee)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        <a class="const_delete_emp" href="@Url.Action("RemoveEmployeeFromConstruction", "Construction", new { empId = item.Id, consId =Model.Id }) ">
                                            <img src="~/css/edit-delete.png">
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                        <div style=" height: 300px; width: 500px; overflow: auto;">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            Nazwa
                                        </th>
                                        <th>
                                            Ilość
                                        </th>
                                        <th>
                                            <a class="const_add_emp" href="@Url.Action("AddItemToConstruction", "Construction",new { id = Model.Id }) "> <img src="~/css/list-add.png"></a>
                                            @*<a class="const_add_emp" asp-action="AddEmployeeToConstruction" asp-controller="Construction"> <img src="~/css/list-add.png"></a>*@
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Qantity))
                                            </td>
                                            <td>
                                                <a class="const_delete_emp" href="@Url.Action("RemoveEmployeeFromConstruction", "Construction", new { itemId = item.Id, consId =Model.Id }) ">
                                                    <img src="~/css/edit-delete.png">
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>



                    



                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Bufor" /> @Html.DisplayNameFor(model => model.Bufor)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gotowe" class="btn btn-success" />
                        <a class="btn btn-danger" style="height:38px" ,"width: 100px;" asp-action="Index" asp-controller="Construction">Anuluj </a>
                    </div>
</form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
